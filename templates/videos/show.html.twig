{% extends 'base.html.twig' %}

{% block title %}Videos{% endblock %}

{% block body %}
    <h1>Videos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ video.titre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ video.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>Id_youtube</th>
                <td>{{ video.idYoutube }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ video.createdAt ? video.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ video.updatedAt ? video.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Featured_image</th>
                <td>{{ video.featuredImage }}</td>
            </tr>
            <tr>
                <th>Date_sortie_youtube</th>
                <td>{{ video.dateSortieYoutube ? video.dateSortieYoutube|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('videos_index') }}">back to list</a>

    <a href="{{ path('videos_edit', {'id': video.id}) }}">edit</a>

    {{ include('videos/_delete_form.html.twig') }}
{% endblock %}
